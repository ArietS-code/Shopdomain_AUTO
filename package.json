{
  "name": "ai-in-action-workshop-level2-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22",
    "npm": ">=11"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test:unit": "jest --passWithNoTests",
    "test:coverage": "jest --coverage",
    "test:stopandshop": "TEST_OPCO=stopandshop jest --passWithNoTests",
    "test:giantfood": "TEST_OPCO=giantfood jest --passWithNoTests",
    "test:foodlion": "TEST_OPCO=foodlion jest --passWithNoTests",
    "test:martinsfoods": "TEST_OPCO=martinsfoods jest --passWithNoTests",
    "test:giantfoodstores": "TEST_OPCO=giantfoodstores jest --passWithNoTests",
    "test:hannaford": "TEST_OPCO=hannaford jest --passWithNoTests",
    "test:beta": "TEST_ENV=beta jest --passWithNoTests",
    "test:delta": "TEST_ENV=delta jest --passWithNoTests",
    "test:e2e": "npx playwright test tests/e2e/",
    "test:e2e:ui": "npx playwright test tests/e2e/ --ui",
    "test:e2e:headed": "npx playwright test tests/e2e/ --headed",
    "test:e2e:banner": "npx playwright test tests/e2e/ui/search-bar-banner.playwright.spec.ts",
    "test:e2e:top-banner": "npx playwright test tests/e2e/ui/top-homepage-banner.playwright.spec.ts",
    "test:e2e:hero-banner": "npx playwright test tests/e2e/ui/hero-banner.playwright.spec.ts",
    "test:e2e:api": "npx playwright test tests/e2e/api/",
    "test:e2e:api:banner": "npx playwright test tests/e2e/api/banner-api.playwright.spec.ts",
    "test:e2e:report": "npx playwright show-report test-results/html-report",
    "verify": "node tests/scripts/verify-connection.js",
    "verify:stopandshop": "TEST_OPCO=stopandshop TEST_ENV=delta node tests/scripts/verify-connection.js",
    "verify:giantfood": "TEST_OPCO=giantfood TEST_ENV=delta node tests/scripts/verify-connection.js",
    "open:browser": "bash tests/scripts/open-browser.sh",
    "open:stopandshop": "TEST_OPCO=stopandshop TEST_ENV=delta bash tests/scripts/open-browser.sh",
    "open:giantfood": "TEST_OPCO=giantfood TEST_ENV=delta bash tests/scripts/open-browser.sh",
    "open:foodlion": "TEST_OPCO=foodlion TEST_ENV=delta bash tests/scripts/open-browser.sh",
    "lint": "eslint . --ext .ts,.vue",
    "lint:style": "stylelint \"src/**/*.{css,scss,vue}\"",
    "format": "prettier --write .",
    "typecheck": "vue-tsc --noEmit"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "vue": "^3.5.0",
    "vue-router": "^4.3.0",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.30",
    "@vitejs/plugin-vue": "4.6.2",
    "@vue/test-utils": "^2.4.0",
    "@vue/vue3-jest": "^29.2.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.2.0",
    "sass": "^1.77.0",
    "stylelint": "^15.11.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^34.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "vite": "5.4.10",
    "vite-plugin-css-injected-by-js": "^3.2.0",
    "vite-svg-loader": "^5.1.0",
    "vue-tsc": "^2.0.0"
  },
  "lint-staged": {
    "*.{ts,vue,js,json,md}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,vue}": [
      "stylelint --fix",
      "prettier --write"
    ]
  }
}
